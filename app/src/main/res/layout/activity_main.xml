<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/common_screen_margin_32dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Space style="@style/CustomSpaceStyle" />

    <TextView
        style="@style/CustomTextView"
        android:text="@string/app_title"
        android:freezesText="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="@dimen/title_text_size" />


    <TextView
        android:id="@+id/counterTextView"
        style="@style/CustomBackGroundTextView"
        android:layout_gravity="end"
        android:freezesText="true"
        android:background="@drawable/shape_rounded_blue"
        android:textColor="@color/white"
        tools:text="1/2" />

    <TextView
        android:id="@+id/shuffledWordTextView"
        style="@style/CustomTextView"
        android:freezesText="true"
        android:layout_marginTop="@dimen/common_view_margin_top"
        android:textColor="@color/black"
        android:textSize="@dimen/large_text_size"
        tools:text="Animal" />

    <TextView
        style="@style/CustomTextView"
        android:layout_marginTop="@dimen/common_view_margin_top"
        android:text="@string/rule_of_the_game"
        android:textColor="@color/black"
        android:textSize="@dimen/medium_text_size" />

    <com.kliachenko.unscramblegame.Input
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_view_margin_top"
        android:text="@string/submit" />

    <Button
        android:id="@+id/skipButton"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        android:text="@string/skip"
        android:textColor="@color/blue" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:freezesText="true"
        android:layout_gravity="center"
        android:background="@drawable/shape_rounded_grey"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        tools:text="Score" />

    <Space style="@style/CustomSpaceStyle" />

</LinearLayout>